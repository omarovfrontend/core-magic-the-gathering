{{!-- менюшка для зарегистрации на сайте --}}
<div class="img-up"></div>
<div>
    <div class="main-container">
        <div class="registr-container">
            <h1>Регистрация</h1>
            <form action="/user/signup" method="post">
                <input class="input" required="required" type="text" name="name" placeholder="Введите имя">
                <input class="input" required="required" type="email" name="email" placeholder="Введите email">
                <input class="input" required="required" type="password" name="password" placeholder="Введите пароль">
                <div>
                    Ваш город
                    <select class="city-container" required="required" name="user_city">
                        <option value="1">Москва</option>
                        <option value="2">Санкт-Петербург</option>
                        <option value="3">Тверь</option>
                        <option value="4">Севастополь</option>
                        <option value="5">Новосибирск</option>
                    </select>
                </div>
            </form>
            <button class="button" type="submit">Зарегистрироваться</button>
        </div>
    </div>
</div>